<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="20">
        <ProgressBar DockPanel.Dock="Top" IsIndeterminate="True" x:Name="progressBar" Value="30" Height="30"></ProgressBar>
        <Button DockPanel.Dock="Bottom" Click="Button_Click"  Height="40">Start</Button>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>
            <ListBox x:Name="listBox" Grid.Row="0" Margin="0,10"></ListBox>
            <TextBox Name="TB"  Grid.Row="1" Margin="0,5"></TextBox>
        </Grid>
    </DockPanel>
</Window>
